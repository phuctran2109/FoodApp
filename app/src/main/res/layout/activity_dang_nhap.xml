<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DangNhap">
    <ImageView
        android:id="@+id/logoDangNhap"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/logo_app"
        />
    <EditText
        android:id="@+id/edtSoDienThoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/logoDangNhap"
        android:background="@drawable/edittext_bg"
        android:hint="Nhập số điện thoại của bạn"
        android:inputType="phone"
        android:padding="20dp"
        android:textColor="#49454F" />

    <EditText
        android:id="@+id/edtMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtSoDienThoai"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_bg"
        android:hint="Nhập mật khẩu của bạn"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#49454F" />
    <LinearLayout
        android:id="@+id/btnDangNhap"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/edtMatKhau"
        android:background="@drawable/button_bg"
        android:backgroundTint="#FE7F5E"
        android:gravity="center"
        android:layout_marginHorizontal="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="SIGN IN"
            android:textSize="20sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvQuenMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/btnDangNhap"
        android:text="Quên password?"
        android:textAlignment="center"
        android:textSize="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvQuenMatKhau"
        android:textAlignment="center"
        android:layout_marginHorizontal="55dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản?"
            android:textAlignment="center"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/tvDangKy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Tạo tài khoản nhé"
            android:textSize="17dp"
            android:textColor="#40C6FF"
            android:textStyle="bold"/>
    </LinearLayout>


</RelativeLayout>